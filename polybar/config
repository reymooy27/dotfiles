pading-right = 0

; module-margin-left = 0
; module-margin-right = 3

; font-0 = CaskaydiaCove Nerd Font Mono:pixelsize=9;3
font-0 = JetBrainsMono Nerd Font:pixelsize=11;3
font-1 = JetBrainsMono Nerd Font:size=14;4

modules-left = i3 round-right empty-space round-left eth round-right
modules-center = round-left date round-right
modules-right = round-left pulseaudio backlight memory wlan battery round-right

; tray-position = right
; tray-padding = 2
;tray-background = #0063ff
;wm-restack = bspwm

;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

